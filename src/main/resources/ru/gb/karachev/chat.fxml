<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ru.gb.karachev.ChatController">
    <children>
        <TextArea fx:id="textArea" prefHeight="0.0" prefWidth="600.0" VBox.vgrow="ALWAYS">
            <font>
                <Font size="20.0"/>
            </font>
        </TextArea>
        <HBox prefHeight="0.0" prefWidth="600.0" VBox.vgrow="NEVER">
            <children>
                <TextField fx:id="textField" HBox.hgrow="ALWAYS" onAction="#send">
                    <font>
                        <Font size="20.0"/>
                    </font>
                </TextField>
                <Button fx:id="buttonSend" mnemonicParsing="false" text="Send" textAlignment="CENTER" onAction="#send"
                        HBox.hgrow="NEVER">
                    <font>
                        <Font size="20.0"/>
                    </font>
                </Button>
            </children>
        </HBox>
    </children>
</VBox>
